{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist"
    },
    "include": [
        "./scripts",
        "./contracts",
        "./test",
        "./hardhat.config.js"
    ],
    "exclude": [
        "node_modules",
        "who-knows-app"
    ]
}